# /etc/nginx/sites-available/voicecrm.online.conf

# Для корректного Upgrade заголовка (WS)
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen 80;
    listen [::]:80;

    server_name voicecrm.online www.voicecrm.online;

    return 301 https://voicecrm.online$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name voicecrm.online www.voicecrm.online;

    # SSL (Certbot)
    ssl_certificate     /etc/letsencrypt/live/voicecrm.online/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/voicecrm.online/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # Загрузка фото (multipart) и большие ответы
    client_max_body_size 50m;

    # Security headers (умеренно, без ломания upload/camera)
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
    add_header Referrer-Policy strict-origin-when-cross-origin always;

    # Если планируете снимать фото камерой в web — НЕ запрещаем camera.
    # Если точно не нужно — можно вернуть camera=()
    add_header Permissions-Policy "geolocation=(), microphone=()" always;

    # HSTS (включать только если уверены, что https всегда будет)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # /api -> FastAPI backend
    location /api/ {
        proxy_pass http://127.0.0.1:8001/;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # опционально, если будут долгие операции
        proxy_read_timeout 120s;
        proxy_send_timeout 120s;
    }

    # /ai -> AI service
    location /ai/ {
        proxy_pass http://127.0.0.1:8002/;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_read_timeout 120s;
        proxy_send_timeout 120s;
    }

    # /media -> MinIO (S3 API)
    location /media/ {
        proxy_pass http://127.0.0.1:9100/;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # если потом появятся PUT/стримы — можно включить:
        # proxy_request_buffering off;
    }

    # Магазин (web) — главный вход на домене
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # на будущее (если будут WS/стримы)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        proxy_read_timeout 120s;
        proxy_send_timeout 120s;
    }

    # защита от доступа к скрытым файлам
    location ~ /\.(?!well-known).* {
        deny all;
    }
}